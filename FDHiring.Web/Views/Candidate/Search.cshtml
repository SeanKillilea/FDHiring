@{
    ViewData["Title"] = "Candidate Search";
    var searchName = ViewData["SearchName"] as string ?? "";
    var searchActive = ViewData["SearchActive"] as bool?;
    var searchCurrent = ViewData["SearchCurrent"] as bool? ?? false;
    var searchWouldHire = ViewData["SearchWouldHire"] as bool? ?? false;
}

<!-- ===== ACTIVE CANDIDATE CARD ===== -->
@await Html.PartialAsync("_ActiveCandidate")

<!-- ===== SEARCH / FILTER BAR ===== -->
<div class="search-bar mb-sm">
    <div class="search-bar-field">
        <svg class="icon icon-sm"><use href="#icon-search"></use></svg>
        <input class="input" type="text" placeholder="Search candidates..."
               value="@searchName"
               data-search-input />
    </div>
    <select class="select" style="width:auto;min-width:100px" data-search-active>
        <!option value=""@(searchActive.HasValue ? "" : " selected")>All</!option>
        <!option value="true"@(searchActive == true ? " selected" : "")>Active</!option>
        <!option value="false"@(searchActive == false ? " selected" : "")>Inactive</!option>
    </select>
    <label class="check-label">
        <input class="check-input" type="checkbox"
               @(searchCurrent ? "checked" : "")
               data-search-current />
        Current
    </label>
    <label class="check-label">
        <input class="check-input" type="checkbox"
               @(searchWouldHire ? "checked" : "")
               data-search-wouldhire />
        Would Hire
    </label>
    <span class="search-bar-results" data-search-results>Results 0 of 0</span>
</div>

<!-- ===== CANDIDATE LIST ===== -->
<div class="candidate-list" data-candidate-list></div>

<!-- ===== COMPACT CARD TEMPLATE ===== -->
<template data-tpl="compact-card">
    <div class="candidate-card candidate-card-compact">
        <div class="candidate-card-photo" data-field="photo"></div>
        <div class="candidate-card-body">
            <div class="candidate-name" data-field="name"></div>
            <div class="candidate-position" data-field="position"></div>
            <div class="candidate-detail">
                <svg class="icon icon-xs"><use href="#icon-email"></use></svg>
                <span data-field="email"></span>
            </div>
            <div class="candidate-detail">
                <svg class="icon icon-xs"><use href="#icon-phone"></use></svg>
                <span data-field="phone"></span>
            </div>
            <div class="candidate-detail">
                <svg class="icon icon-xs"><use href="#icon-linkedin"></use></svg>
                <span data-field="linkedin"></span>
            </div>
        </div>
        <div class="candidate-notes" data-field="notes"></div>
        <div class="candidate-card-aside">
            <span data-field="badge-active"></span>
            <span data-field="badge-wouldhire"></span>
            <span data-field="badge-current"></span>
        </div>
    </div>
</template>